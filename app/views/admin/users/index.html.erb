<h1>Users</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, admin_user_path(user) %></td>
    <td>(<%= "#{user.roles.join','}" %>)</td>
    <td>[ <%= link_to 'edit', edit_admin_user_path(user) %> ]</td>
    <td>[ <%= link_to 'remove', user, confirm: 'Are you sure?', method: :delete %> ]</td>
  </tr>
<% end %>
</table>

